# catr <start> <end> <file>
#   start at line <start>, print <end> - <start> + 1 lines from <file>
catr() {
    tail -n "+$1" $3 | head -n "$(($2 - $1 + 1))"
}


# Automatically stages all changes, generates a random commit message,
# and pushes the changes to the remote repository.
commit_plz() {
    git pull
    git add .
    git commit -m "$(curl -sk https://whatthecommit.com/index.txt)"
    git push
}



# Prints a public URL for your local web server.
#
# Usage:
#   tunnel <port>
#
# Example:
#   tunnel 3000
tunnel() {
    if [ "$1" -eq "0" ] 
    then
        echo "Please provide a port"
    else
        cloudflared tunnel --url http://localhost:$1 2> >(grep -oh "https://\(.*\)trycloudflare.com")
    fi
}

ex() {
    if [ -f $1 ] ; then
        case $1 in
            *.tar.bz2)   tar xjf $1   ;;
            *.tar.gz)    tar xzf $1   ;;
            *.tar.xz)    tar xJf $1   ;;
            *.bz2)       bunzip2 $1   ;;
            *.rar)       unrar x $1     ;;
            *.gz)        gunzip $1    ;;
            *.tar)       tar xf $1    ;;
            *.tbz2)      tar xjf $1   ;;
            *.tgz)       tar xzf $1   ;;
            *.zip)       unzip $1     ;;
            *.Z)         uncompress $1;;
            *.7z)        7z x $1      ;;
            *)           echo "'$1' cannot be extracted via ex()" ;;
        esac
    else
        echo "'$1' is not a valid file"
    fi
}
